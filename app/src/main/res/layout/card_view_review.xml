<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id = "@+id/card_view_review"
    android:layout_margin = "8dp"
    android:clickable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin = "16dp"
        android:orientation="vertical"
       android:id = "@+id/reviewcard">

        <TextView
            android:id="@+id/lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How was the tool used in the lesson?" />

            <TextView
                android:id="@+id/answer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To review content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/drive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How does the tool drive student learning?" />
        <TextView
            android:id="@+id/answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Students can get feedback about their performance"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/othercomments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Any other comments?" />
        <TextView
            android:id="@+id/answer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sometimes malfunctions midway."
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/easiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easiness:" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:id="@+id/answer4"/>
        <TextView
            android:id="@+id/userFriendliness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Friendliness:" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:id="@+id/answer5"/>
        <TextView
            android:id="@+id/overall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overall:" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:id="@+id/answer6"/>

        <TextView
            android:id="@+id/reuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Would you reuse the tool?"></TextView>
        <TextView
            android:id="@+id/answer7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimary"/>


    </LinearLayout>



</android.support.v7.widget.CardView>


